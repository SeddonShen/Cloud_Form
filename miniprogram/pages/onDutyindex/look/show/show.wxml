<view class="padding text-center">
	<view class="padding-xl radius shadow bg-white text-xxl">
		<text class="text-bold" style="color:#AB0313;">本次排班时段</text>
		<view>
			<view class="cu-form-group margin-top">
				<view class="title">值班日期</view>
				<view style="font-size: 30rpx;">
					{{onduty.datesend}}
				</view>
			</view>
			<view class="cu-form-group">
				<view class="title">时段</view>
				<view style="font-size: 30rpx;">
					{{onduty.time_begin}} - {{onduty.time_end}}
				</view>
			</view>
			<view class="cu-form-group">
				<view class="title">地点</view>
				<view style="font-size: 30rpx;">
					{{onduty.place}}
				</view>
			</view>
		</view>
	</view>
</view>
<view class="padding text-center">
	<view class="padding radius shadow bg-white text-xxl">
		<text class="text-bold" style="color:#AB0313;">详情须知</text>
		<view class="padding">
			<text>{{onduty.notice}}</text>
		</view>
		<view>
		<image src="{{onduty.imgList}}" bindtap="showImg"></image>
		</view>
	</view>
</view>